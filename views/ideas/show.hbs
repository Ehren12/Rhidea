<div class="row">
    <div class="col s12">
        <h3>{{idea.title}}
            <small>{{{editIcon idea.user user idea._id false}}}</small>
        </h3>
        <div class="card story z-depth-3">
            <div class="card-content">
                <span class="card-title">{{{idea.createdAt}}}</span>
                <br>
                <h6 class="bold">What it's about!</h6>
                {{{idea.description}}}
                
                <h6 class="bold">Problem</h6>
                {{{idea.problem}}}
                
                <h6 class="bold">Tags</h6>
                {{{idea.tags}}}
            </div>
        </div>
    </div>
    <div class="col s12  m6">
        <div class="card center-align z-depth-3">
            <div class="card-content">
                <span class="card-title">By {{idea.user.displayName}}</span>
                <img src="{{idea.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/ideas/user/{{idea.user._id}}">More From {{idea.user.firstName}}</a>
            </div>
        </div>
    </div>
    
</div>